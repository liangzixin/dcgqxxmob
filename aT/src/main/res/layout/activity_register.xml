<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiangmu.lzx.activitys.RegisterActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout

        android:id="@+id/titlebar0"

        android:layout_width="match_parent"

        android:layout_height="40dp"

        android:background="@drawable/titlebar_background"

        android:gravity="center_vertical">

        <ImageButton

            android:id="@+id/loginimage_back"

            android:layout_width="55dp"

            android:layout_height="match_parent"

            android:adjustViewBounds="true"

            android:background="@android:color/transparent"

            android:scaleType="centerInside"

            android:src="@drawable/back" />

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/loginimage_back"

            android:layout_toRightOf="@+id/loginimage_back"

            android:text="注册"

            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="欢迎注册东川供求信息帐户"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titlebar0" />

    <LinearLayout
        android:id="@+id/layoutnor0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text1">

        <TextView

            android:id="@+id/name0"
            style="@style/xinwen_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="用户名称"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/username"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/name0"
            android:layout_toRightOf="@+id/name0"
            android:background="@drawable/select_edittext"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnor1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layoutnor0"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutnor0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutnor0">

        <TextView

            android:id="@+id/name01"
            style="@style/xinwen_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/mobile_login"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/name0"
            android:layout_toRightOf="@+id/name0"
            android:background="@drawable/select_edittext"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="phone"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnor1">

        <EditText
            android:id="@+id/yanzhengma"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/select_edittext"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/getyanzhengma1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.9"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnor2"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView

            android:id="@+id/name02"
            style="@style/xinwen_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="密        码"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/pwd1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/name0"
            android:layout_toRightOf="@+id/name0"
            android:background="@drawable/select_edittext"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnor3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnor2">

        <TextView

            android:id="@+id/name03"
            style="@style/xinwen_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="密码确认"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/pwd2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/name0"
            android:layout_toRightOf="@+id/name0"
            android:background="@drawable/select_edittext"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnor4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnor3">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="注  册"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="间隔"
            android:visibility="invisible" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="重  置"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="291dp"
        android:layout_height="97dp"
        android:layout_alignLeft="@+id/line1"
        android:layout_below="@+id/layoutnor4"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnor4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="如果您已经注册了东川供求信息账号,或有其他可登陆第三方请您直接登录账号."
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:gravity="center_vertical"
            android:text="直接登录------>>"
            android:textColor="#ff4a27"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
